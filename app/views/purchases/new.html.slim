== render "layouts/header"
section.app-content.row
  .large-10.columns.large-centered
    .box.form.checkout
      .box-header
        h4 
          i.fi.fi-check.ta-novinho
          =" Confirme a sua compra"
      .box-content
        .row
          .large-3.columns
            img src="#{attachment_url(@purchase.product, :product_image, :fill, 1024, 768, format: 'jpg')}"
          .large-9.columns
            h3 = @purchase.product.name
            .checkout-description
              = @purchase.product.description
        
            h5 
              span Pre√ßo: 
              big.ta-novinho = " #{number_to_currency @purchase.product.price}" 
      .form-actions.box-footer
        == render 'form'

